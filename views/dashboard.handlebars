<header class="row navbar navbar-light bg-light border">
  <div class="col">
    <div id="title" class="text-align-middle">
      <img class="logo img-fluid" src="/assets/pictures/logo_transparent.png" alt="">
    </div>
  </div>
  <div class="col d-flex justify-content-end">
    <div class="top-buttons">
      <button type="button" onclick="location.href='/logout'" id="login-button" class="btn">Logout</button>
    </div>
</header>


<section class="row mx-auto d-flex justify-content-center m-3 mb-5">
  <form class="mx-auto form-group d-flex justify-content-center" action="" method="POST">
    <input id="stockInput" class="form-control" type="text" placeholder="ex. AAPL,MSFT">
    <button id="stockSearch" value="stock-symbol" class="btn btn-secondary">Search</button>
  </form>
  <span id="time-remaining"></span>
</section>


<section id="company-card-section" class="row mx-auto  justify-content-center" style="display:flex">
  <div id="recents-card" class="card d-flex align-items-stretch col-sm-auto mx-0" style="width: 14rem">
      <h4>Recent Searches</h4>
      <ul id="recents-list" class="list-group list-group-flush">
        {{#each searchHistory}}
        <li data-id={{this.id}}   class="list-group-item d-flex justify-content-between align-items-center">
          <button id="stockAnchor" href="" class="h5" data-name={{this.name}}>{{this.name}}</button> 
          <button id="trash-btn" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></button> 
        </li>
        {{/each}}
      </ul>
    </div>

  <div id="company-card" class="card d-flex align-items-stretch col-sm-auto mx-0" style="width: 30rem ">
    <div class="mx-auto py-2 d-flex justify-content-center">
      <img class="company-image mr-3" width="40" height="40" src={{newSearch.image}}>
      <h2 class="company-name"><a href={{newSearch.website}}>{{newSearch.companyName}}</a></h2>
    </div>
    <ul id="company-card-list" class="mx-5">
      <li id="trend-text" class="h5">Trend Text</li>
      <li class="date h5"><time datetime="2016-04-01T19:00">{{newSearch.date}}</time></li>
      <li class="ceo-name h5">CEO: {{newSearch.ceo}}</li>
      <li class="industry h5">Sector: {{newSearch.sector}}</li>
      <li class="current-price h5">Current Price: {{newSearch.price}} {{newSearch.currency}}</li>
      <li class="dividends h5">Last Dividend: {{newSearch.lastDiv}}</li>
      <li class="eps h5">EPS</li>
      <li class="gross-profit-ratio h5">GROSS PROFIT RATIO</li>
      <li class="net-income-ratio h5">NET INCOME RATIO</li>
    </ul>
    <section id="stock-chart-section" class="row"></section>
  </div>



