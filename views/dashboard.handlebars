<header class="row navbar navbar-light bg-light border">
  <div class="col">
    <div id="title" class="text-align-middle">
      <img class="logo img-fluid" src="/assets/pictures/logo_transparent.png" alt="">
    </div>
  </div>
  <div class="col d-flex justify-content-end">
    <div class="top-buttons">
      <button type="button" onclick="location.href='/logout'" id="login-button" class="btn">Logout</button>
    </div>
</header>



<section id="company-card-section" class="row mx-auto">

  <div id="recents-card" class="card col-m-3">
    <h4>Recent Searches</h4>
    <form class="form-group d-flex justify-content-center" method="POST">
    <input id="stockInput" class="form-control mx-auto" type="text" placeholder="ex. AAPL,MSFT">
    <button id="stockSearch" value="stock-symbol" class="btn btn-secondary mx-auto">Search</button>
  </form>
    <ul id="recents-list" class="list-group list-group-flush">
      {{#each searchHistory}}
      <li data-id={{this.id}} class="list-group-item d-flex justify-content-between align-items-center">
        <button class="stockAnchor btn btn-secondary btn-sm"
          data-name={{this.name}}>{{this.name}}</button>
        <button class="trash-btn btn btn-danger btn-sm"><i class="fa fa-trash"></i></button>
      </li>
      {{/each}}
    </ul>
  </div>

  <div id="company-card" class="card col-md-4">
    {{#if newSearch}}
    <div class="mx-auto">
      <img class="company-image mx-auto" width="40" height="40" src={{newSearch.image}}>
      <h2 class="company-name mx-auto"><a href={{newSearch.website}}>{{newSearch.companyName}}</a></h2>
    </div>
    <ul id="company-card-list" class="mx-5">
      <li id="trend-text" class="h5 badge badge-success">{{newSearch.trend}}</li>
      <li class="date h5"><time datetime="2016-04-01T19:00">{{newSearch.date}}</time></li>
      <li class="ceo-name h5">CEO: {{newSearch.ceo}}</li>
      <li class="industry h5">Sector: {{newSearch.sector}}</li>
      <li class="current-price h5">Current Price: {{newSearch.price}} {{newSearch.currency}} {{newSearch.currency}}</li>
      <li class="dividends h5">Last Dividend: {{newSearch.lastDiv}}</li>
      <li class="eps h5">Earnings Per Share: {{newSearch.eps}}</li>
      <li class="gross-profit-ratio h5">Gross Profit Ratio: {{newSearch.grossProfitRatio}}</li>
      <li class="net-income-ratio h5">Net Income Ratio: {{newSearch.netIncomeRatio}}</li>
    </ul>
    {{/if}}
  </div>
  
  <div id="news-card" class="card col-md-5">
    <h4>Recent News</h4>
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        {{#each newsFeed}}
        <div class="carousel-item {{#if @first}} active {{/if}}">
          <img src="{{newsFeedImg}}" class="d-block w-100">
          <div class="abstract">
            <a href="{{webURL}}">{{abstract}}</a>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
  </div>
</section>



